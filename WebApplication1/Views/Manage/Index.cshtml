@model WebApplication1.Models.IndexViewModel
@{
    ViewBag.Title = "Gestisci";
}

<main aria-labelledby="title">
    <section class="py-5 overflow-hidden">

        <div class="container mx-auto">
            <div class="row align-items-center">

                <div class="col 12 col-lg-6 mx-auto">
                    <div class="p-5 mt-5 bg-light rounded text-center">

                        <h3 class="fw-bold mb-5">Gestisci Account</h3>

                        <a href="@Url.Action("ModificaUtente","Utenti")" class="btn btn-dark py-2 w-100 mb-4">Modifica Account </a>

                        <div>
                            
                            @if (Model.HasPassword)
                            {
                                @Html.ActionLink("Cambia password", "ChangePassword", null, new {@class= "btn btn-dark py-2 w-100 mb-4" })
                            }
                            else
                            {
                                @Html.ActionLink("Crea", "SetPassword", new { @class = "btn btn-dark py-2 w-100 mb-4" })
                            }
                            
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>


















