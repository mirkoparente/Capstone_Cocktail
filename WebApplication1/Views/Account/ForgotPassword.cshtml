@model WebApplication1.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Password dimenticata?";
}


@* Password dimenticata, form di reset *@

<main aria-labelledby="title">
    <section class="py-5 overflow-hidden">

        <div class="container mx-auto">
            <div class="row align-items-center">

                <div class="col-12 col-lg-6 mx-auto">
                    <div class="p-5 mt-5 bg-light rounded text-center">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()


                            <h3 class="fw-bold mb-5">Recupero password</h3>
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <h4>Immettere l'indirizzo di posta elettronica.</h4>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <div class="form-outline mb-4">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "Email" } })
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label", @for = "Email" })
                            </div>


                            <div class="d-flex justify-content-between w-100">


                                <button class="btn btn-dark py-2 w-100 mb-4">Invia</button>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
