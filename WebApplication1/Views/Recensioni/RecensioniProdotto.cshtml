@model IEnumerable<WebApplication1.Models.Recensioni>


<section class="mt-5 py-5">
    <div class="row row-cols-3 d-flex justify-content-center">
        <div class="col-md-10 col-xl-8 text-center">
            <h3 class="mb-4">Recensioni</h3>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-lg-4 text-center">
        @if (Model.Count() != 0)
        {

            foreach (var item in Model)
            {
                <div class="col-md-4 mb-5 mb-md-0">
                    <div class="d-flex justify-content-center mb-4">
                        <img src="https://icon-library.com/images/user-accounts-icon/user-accounts-icon-15.jpg"
                             class="bg-transparent rounded-circle shadow-1-strong" width="150" height="150" />
                    </div>
                    <h5 class="mb-3"> @item.AspNetUsers.Nome @item.AspNetUsers.Cognome</h5>
                    <h6 class="text-primary mb-3">@item.AspNetUsers.UserName</h6>
                    <p class="px-xl-3">
                        <i class="fas fa-quote-left pe-2"></i>@item.Commento
                    </p>
                    <ul class="list-unstyled d-flex justify-content-center mb-0">
                        @for (int i = 0; i < item.Valutazione.Value; i++)
                        {



                            <li>
                                <i class="fas fa-star fa-sm text-warning"></i>
                            </li>

                        }
                        @if (item.Valutazione < 5 && item.Valutazione == 4)
                        {

                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                        }
                        else if (item.Valutazione < 5 && item.Valutazione == 3)
                        {
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                        }
                        else if (item.Valutazione < 5 && item.Valutazione == 2)
                        {
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>

                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                        }
                        else if (item.Valutazione < 5 && item.Valutazione == 1)
                        {
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                            <li>
                                <i class="far fa-star fa-sm text-warning"></i>
                            </li>
                        }




                    </ul>
                </div>
            }




        }
        else
        {
            <p>Non ci sono ancora recensioni per questo prodotto</p>
        }
    </div>



  
</section>



