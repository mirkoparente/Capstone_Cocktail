@model IEnumerable<WebApplication1.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<!-- Container for demo purpose -->
<div class="container my-5 py-5">

    <!--Section: Design Block-->
    <section class="mb-0">
        <div class="d-md-flex justify-content-center align-items-center mb-4">
            <h2 class="fw-bold mb-md-0 mt-5">I nostri cocktail</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 mb-5 mb-lg-0 d-flex flex-column justify-content-between">
                    <div>

                        <div class="bg-image ripple hover-zoom shadow-5 rounded-5 mb-3" data-mdb-ripple-color="light">
                            <img src="~/Content/img/@item.FotoCopertina" alt="Mug 1" class="w-100" />
                            <a href="@Url.Action("DettagliProdotto","Prodotti",new {id=item.IdProdotti})">
                                <div class="mask"></div>
                            </a>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6>@item.NomeProdotto</h6>
                            <h6>@item.Prezzo.ToString("C2")</h6>
                        </div>
                    </div>

                    <div>

                        <p class="mb-0">@item.DescrizioneBreve</p>

                        <div class="d-flex w-100 justify-content-center h-50 mt-3">
                            @if (item.Disponibile != false)
                            {

                                <a href="@Url.Action("AggiungiAlCarrello", "Ordini", new {id=item.IdProdotti})" class="link-dark"><i class="fas fa-shopping-bag"></i></a>
                            }
                            else
                            {

                            }

                        </div>
                    </div>
                </div>
            }

        </div>
    </section>
    <!--Section: Design Block-->

</div>
<!-- Container for demo purpose -->
