
@model IEnumerable<WebApplication1.Models.Prodotti>

@{
    ViewBag.Title = "Accessori Mixology";
}


    <!--Section: Design Block-->
    <section class="mb-10">
        <header>

            <!-- Background image -->
            <div class="text-center bg-image" style=" background-image: url('https://images.pexels.com/photos/7518776/pexels-photo-7518776.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1'); height: 400px; ">
                <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                    <div class="d-flex justify-content-center align-items-center h-100">
                        <div class="text-white">
                            <h2 class="fw-bold mb-md-0 mt-5">Accessori per mixologist</h2>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Background image -->
        </header>
<div class="container">
        <div class="d-md-flex justify-content-center align-items-center mb-4">
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 mb-5 mb-lg-0">
                    <div class="bg-image ripple hover-zoom shadow-5 rounded-5 mb-3" data-mdb-ripple-color="light">
                        <img src="~/Content/img/@item.FotoCopertina" alt="Mug 1" class="w-100" />
                        <a href="@Url.Action("DettagliProdotto","Prodotti",new {id=item.IdProdotti})">
                            <div class="mask"></div>
                        </a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6>@item.NomeProdotto</h6>
                        <h6>@item.Prezzo.ToString("C2")</h6>
                    </div>

                    <div class="">
                        <p class="mb-0">@item.DescrizioneBreve</p>
                        <div class="d-flex w-100 justify-content-center">
                            @if (item.Disponibile != false)
                            {

                                <a href="@Url.Action("AggiungiAlCarrello", "Ordini", new {id=item.IdProdotti})" class="link-dark"><i class="fas fa-shopping-bag"></i></a>
                            }
                            else
                            {

                            }
                        </div>
                    </div>
                </div>
            }

        </div>
</div>
    </section>
    <!--Section: Design Block-->

