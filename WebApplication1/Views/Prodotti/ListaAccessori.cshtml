
@model IEnumerable<WebApplication1.Models.Prodotti>

@{
    ViewBag.Title = "Accessori Mixology";
}


<section class="mb-0">
    <header>

        <!-- Background image -->
        <div class="p-5 text-center bg-image" style=" background-image: url('../../Content/img/pexels-pavel-danilyuk-7518776.jpg'); height: 400px; ">
            <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                <div class="d-flex justify-content-center align-items-center h-100">
                    <div class="text-white">
                        <h2 class="fw-bold mb-md-0 mt-5">Accessori Mixologyst</h2>
                    </div>
                </div>
            </div>
        </div>
        <!-- Background image -->
    </header>
    <div class="container mb-5 pb-5">
        <div class="d-md-flex justify-content-center align-items-center mb-4">
        </div>

        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 mb-5 mb-lg-0 d-flex flex-column justify-content-between">
                    <div>

                        <div class="bg-image ripple hover-zoom shadow-5 rounded-5 mb-3" data-mdb-ripple-color="light">
                            <img src="~/Content/img/@item.FotoCopertina" alt="Mug 1" class="w-100" style="height: 350px; object-fit: cover;" />
                            <a href="@Url.Action("DettagliProdotto","Prodotti",new {id=item.IdProdotti})">
                                <div class="mask"></div>
                            </a>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6>@item.NomeProdotto</h6>
                            <h6>@item.Prezzo.ToString("C2")</h6>
                        </div>
                    </div>
                    <div>

                        <p class="mb-0">@item.DescrizioneBreve</p>

                        <div class="h-10"></div>
                        <div class="d-flex w-100 justify-content-center mt-3 mb-5">
                            @if (item.Disponibile != false)
                            {

                                <a href="@Url.Action("AggiungiAlCarrello", "Ordini", new {id=item.IdProdotti})" class="btn btn-dark link-light">Aggiungi al carrello <i class=" ms-2 fas fa-shopping-bag"></i></a>
                            }
                            else
                            {
                                <button class="btn btn-dark disabled">Non disponibile</button>
                            }

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
